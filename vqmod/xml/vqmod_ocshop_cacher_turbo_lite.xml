		</operation>
		
		<operation>
			<search position="replace"><![CDATA[fwrite($handle, serialize($value));]]></search>
			
			<add><![CDATA[
			
			fwrite($handle, gzcompress(serialize($value), $gz_level));]]></add>
			
		</operation>

	</file>	
	
	
